{
  "name": "codechain-indexer",
  "version": "0.1.0",
  "description": "Data synchronizing tool between CodeChain and DB",
  "repository": "https://github.com/CodeChain-io/codechain-indexer",
  "license": "Apache-2.0",
  "dependencies": {
    "bignumber.js": "^7.2.1",
    "buffer": "^5.2.1",
    "codechain-indexer-types": "https://github.com/CodeChain-io/codechain-indexer-types-js#7aaf8a03e96bc70c74daa497ccd061dbc45741b9",
    "codechain-sdk": "https://github.com/CodeChain-io/codechain-sdk-js#c8f395dca20665f2619f96b17f7af4559fac74ed",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "fmt": "^1.1.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "node-schedule": "^1.3.0",
    "pg": "^7.7.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.42.0",
    "sharp": "^0.20.8",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "winston": "^2.4.0"
  },
  "scripts": {
    "reset": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "migrate": "sequelize db:migrate",
    "start": "ts-node src/index.ts",
    "test": "jest --env node",
    "lint": "tslint -p . && prettier '{src, scripts}/**/*.{ts,js,json}' -l",
    "fmt": "tslint -p . --fix && prettier '{src, scripts}/**/*.{ts,js,json}' --write"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/lodash": "^4.14.116",
    "@types/node-schedule": "^1.2.2",
    "@types/pg": "^7.4.11",
    "@types/sequelize": "^4.27.33",
    "@types/sharp": "^0.17.10",
    "jest": "^23.6.0",
    "prettier": "^1.14.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
